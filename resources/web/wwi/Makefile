JS_SOURCES = \
  util.js \
  dialog_window.js \
  console.js \
  help_window.js \
  robot_window.js \
  toolbar.js \
  editor.js \
  context_menu.js \
  viewpoint.js \
  selector.js \
  mouse_events.js \
  texture_manager.js \
  resource_manager.js \
  server.js \
  stream.js \
  video_manager.js \
  x3d.js \
  x3d_scene_manager.js \
  animation.js \
  webots.js

NPM_PACKAGES = \
  babel-minify \
  @babel/core \
  @babel/cli \
  @babel/preset-env

NPM_EXISTS = $(shell which npm 2> /dev/null)

ifeq ($(NPM_EXISTS),)
release debug profile update:
	@echo "# Please install nodejs to build 'webots.min.js' using the instructions on the GitHub wiki."
else
release debug profile update: install $(JS_SOURCES)
	@echo "# Compressing webots.min.js"
	@node_modules/.bin/babel $(JS_SOURCES) -o webots.max.js --presets "@babel/preset-env"
	@node_modules/.bin/minify webots.max.js -o webots.min.js
	@rm webots.max.js
endif

install:
	npm install $(NPM_PACKAGES)

uninstall:
	npm uninstall $(NPM_PACKAGES)
	rm -fr node_modules

clean:
	@rm -f *.min.js
